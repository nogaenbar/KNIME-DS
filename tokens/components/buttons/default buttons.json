{
  "comp": {
    "button": {
      "opacity": {
        "enabled": {
          "$type": "opacity",
          "$value": "{base.color.modifiers.enabled-alpha}"
        },
        "disabled": {
          "$type": "opacity",
          "$value": "{base.color.modifiers.disabled-alpha}"
        }
      },
      "primary": {
        "enabled-bg": {
          "$type": "color",
          "$value": "{base.bg.default}"
        },
        "enabled-border": {
          "$extensions": {
            "studio.tokens": {
              "modify": {
                "type": "mix",
                "value": "0.35",
                "space": "lch",
                "color": "{base.fg.default} "
              }
            }
          },
          "$type": "color",
          "$value": "{comp.button.primary.enabled-bg}"
        },
        "hover-bg": {
          "$extensions": {
            "studio.tokens": {
              "modify": {
                "type": "lighten",
                "value": "{base.color.modifiers.lightness} ",
                "space": "lch"
              }
            }
          },
          "$type": "color",
          "$value": "{comp.button.primary.enabled-bg}"
        },
        "fg": {
          "$type": "color",
          "$value": "{base.fg.default}"
        }
      }
    }
  }
}